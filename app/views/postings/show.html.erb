<p>
  <strong>Author:</strong>
  <%= User.find_by_id(@posting.user_id).name %>
</p>
<p>
  <strong>Location:</strong>
  <%= @posting.location %>
</p>

<p>
  <strong>Body:</strong>
  <%= @posting.body %>
</p>

<p>
  <strong>Ensemble:</strong>
  <%= @posting.ensemble %>
</p>

<h2>Comments</h2>
<%= render @posting.comments %>

<h2>Add a comment:</h2>
<%= form_for([@posting, @posting.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if @posting.nearbys(10) %>
  <h3>Nearby postings</h3>
  <ul>
  <% for posting in @posting.nearbys(10) %>
    <li><%= link_to posting.location, posting %> (<%= posting.distance.round(2) %> miles)</li>
  <% end %>
  </ul>
<% end %>

<% if User.find_by_id(@posting.user_id) == current_user %>
  <%= link_to 'Edit', edit_posting_path(@posting) %> |
<% end %>
<%= link_to 'All postings', postings_path %>
