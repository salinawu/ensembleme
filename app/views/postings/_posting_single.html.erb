<li id="posting-<%= posting.id %>">
  <%= link_to gravatar_for(posting.user, size: 50), posting.user %>
  <span class="user"><%= link_to posting.user.name, posting.user %></span>
  <span class="content"><%= posting.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(posting.created_at) %> ago.
  </span>
</li>
