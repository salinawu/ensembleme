<% provide(:title, 'Sign up') %>
<center><h1>Sign up</h1>
<p>Have an account? <%= link_to "Log in here!", login_path %></p></center
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br></br>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br></br>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %><br></br>

      <%= f.label :instrument %>
      <%= f.text_field :instrument, class: 'form-control' %><br></br>

      <%= f.label :expertise %>
      <%= f.range_field :expertise, class: 'form-control' %><br></br>

      <%= f.label :commitment %>
      <%= f.range_field :commitment, class: 'form-control' %><br></br>

      <%= f.label :bio, "User Bio" %>
      <%= f.text_field :bio, class: 'form-control' %><br></br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br></br>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br></br> 

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
