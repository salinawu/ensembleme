<h1>Listing groups</h1>

<%= link_to 'New group', new_group_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Group Bio</th>
  </tr>

  <% @groups.each do |g| %>
    <tr>
      <td><%= link_to g.name, group_path(g) %></td>
      <td><%= g.bio %></td>
    </tr>
  <% end %>
</table>
